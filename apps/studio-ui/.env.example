# =============================================================================
# Frontend Environment Variables (Local Development)
# =============================================================================
# Copy this to .env.local for local development

# Firebase Configuration (get from Firebase Console > Project Settings)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=salesos-473014.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=salesos-473014

# Backend URL
VITE_BACKEND_URL=http://localhost:8000

# Activepieces URL (for embedded workflow editor)
VITE_ACTIVEPIECES_URL=http://localhost:8080

# Activepieces Project ID
# Get from Activepieces database: SELECT id FROM project;
# In production, this should be per-user (from workspace mapping)
VITE_ACTIVEPIECES_PROJECT_ID=
